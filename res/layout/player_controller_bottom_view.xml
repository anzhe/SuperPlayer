<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/player_controller_view_height"
    android:layout_alignParentBottom="true"
    android:background="@color/player_color_88000000"
    android:clickable="true"
    android:gravity="center_vertical"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/player_btn_play_pause"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:gravity="center"
        android:scaleType="center"
        android:src="@drawable/btn_play_disabled" />

    <Button
        android:id="@+id/player_orientation_switch_btn"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/player_orientation_switch_selector_landscape"
        android:clickable="true" />

    <com.dragon.superplayer.player.view.DefaultPlayerSeekBar
        android:id="@+id/player_seekbar_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/player_orientation_switch_btn"
        android:layout_toRightOf="@id/player_btn_play_pause" />

</RelativeLayout>