<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/player_controller_view_height"
    android:layout_alignParentTop="true"
    android:background="@color/player_color_88000000"
    android:clickable="true"
    android:gravity="center_vertical"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/player_controller_btn_back"
        android:layout_width="40dip"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_down"
        android:clickable="true"
        android:src="@drawable/player_back_btn_back" />

    <TextView
        android:id="@+id/player_controller_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/player_controller_btn_back"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:text="hello world"
        android:textColor="@android:color/white"
        android:textSize="14dip" />

</RelativeLayout>